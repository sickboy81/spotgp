{
    "providers": [
        "node"
    ],
    "phases": {
        "setup": {
            "nixPkgs": [
                "nodejs_20",
                "caddy"
            ]
        },
        "install": {
            "cmds": [
                "npm ci"
            ]
        },
        "build": {
            "cmds": [
                "npm run build"
            ]
        }
    },
    "start": {
        "cmd": "caddy file-server --root dist --listen :$PORT"
    }
}